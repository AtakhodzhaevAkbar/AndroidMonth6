<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.androidmonth6.ui.fragments.FirstFragment"                                 
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment">
            <argument
                android:name="characterSC"
                app:argType="com.example.androidmonth6.data.model.Character" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.androidmonth6.ui.fragments.SecondFragment"
        tools:layout="@layout/fragment_second">
        <argument
            android:name="characterSC"
            app:argType="com.example.androidmonth6.data.model.Character" />
    </fragment>

</navigation>
