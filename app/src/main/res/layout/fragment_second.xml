<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SecondFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="405dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/rick" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="380dp"
                    android:id="@+id/cv_material1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:paddingStart="40dp"
                    android:paddingTop="30dp"
                    app:cardElevation="30dp"
                    tools:ignore="RtlSymmetry">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rick Sanchez"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alive - Human"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Gender:"
                            android:textColor="@color/gray"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Last known location:"
                            android:textColor="@color/gray"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Citadel of Ricks"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="First seen in"
                            android:textColor="@color/gray"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilot"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                        <!-- Вместо LinearLayout используем ConstraintLayout и фиксируем высоту для ExpandableListView -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.skydoves.expandablelayout.ExpandableLayout
                                android:id="@+id/expandable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                app:expandable_duration="300"
                                app:expandable_isExpanded="false"
                                app:expandable_parentLayout="@layout/layout_parent"
                                app:expandable_secondLayout="@layout/layout_second"
                                app:expandable_showSpinner="true"
                                app:expandable_spinner="@drawable/ic_arrow_down"
                                app:expandable_spinner_animate="true"
                                app:expandable_spinner_gravity="start"
                                app:expandable_spinner_margin="14dp"
                                app:expandable_spinner_size="32dp"
                                tools:ignore="MissingConstraints" />
                            <com.skydoves.expandablelayout.ExpandableLayout
                                android:id="@+id/expandable2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                app:expandable_duration="300"
                                app:expandable_isExpanded="false"
                                app:expandable_parentLayout="@layout/layout_parent"
                                app:expandable_secondLayout="@layout/layout_second"
                                app:expandable_showSpinner="true"
                                app:expandable_spinner="@drawable/ic_arrow_down"
                                app:expandable_spinner_animate="true"
                                app:expandable_spinner_gravity="start"
                                app:expandable_spinner_margin="14dp"
                                app:expandable_spinner_size="32dp"
                                tools:ignore="MissingConstraints" />
                            <com.skydoves.expandablelayout.ExpandableLayout
                                android:id="@+id/expandable3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                app:expandable_duration="300"
                                app:expandable_isExpanded="false"
                                app:expandable_parentLayout="@layout/layout_parent"
                                app:expandable_secondLayout="@layout/layout_second"
                                app:expandable_showSpinner="true"
                                app:expandable_spinner="@drawable/ic_arrow_down"
                                app:expandable_spinner_animate="true"
                                app:expandable_spinner_gravity="start"
                                app:expandable_spinner_margin="14dp"
                                app:expandable_spinner_size="32dp"
                                tools:ignore="MissingConstraints" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>